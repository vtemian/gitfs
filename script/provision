#!/usr/bin/env bash

set -e

export PYTHON_VERSION=python3.11

function python {
    $PYTHON_VERSION "$@"
}

echo "I am provisioning GitFS development environment..."
echo "Using Python version: $PYTHON_VERSION"
sudo sh -c 'date > /etc/vagrant_provisioned_at'

echo "Updating package index..."
sudo apt-get update

echo "Installing system dependencies..."
# Add deadsnakes PPA for Python 3.11 on Ubuntu 24.04
echo "Adding deadsnakes PPA for Python 3.11..."
sudo add-apt-repository -y ppa:deadsnakes/ppa
sudo apt-get update

# Install Python 3.11 and dependencies
echo "Installing Python 3.11 and system packages..."
sudo DEBIAN_FRONTEND=noninteractive apt-get install -y -q \
    build-essential \
    software-properties-common \
    git \
    curl \
    python3.11 \
    python3.11-dev \
    python3.11-venv \
    python3.11-distutils \
    python3-pip \
    libffi-dev \
    libgit2-dev \
    libfuse-dev \
    fuse \
    pkg-config

echo "Configuring FUSE..."
sudo groupadd -f fuse
sudo usermod -a -G fuse "$USER"
sudo chmod 666 /dev/fuse
echo 'user_allow_other' | sudo tee -a /etc/fuse.conf > /dev/null
sudo chmod 644 /etc/fuse.conf

echo "Setting up Python virtual environment..."
python -m venv /home/vagrant/gitfs
echo "source \$HOME/gitfs/bin/activate" >> "$HOME/.bashrc"

echo "Upgrading pip in virtual environment..."
/home/vagrant/gitfs/bin/python -m pip install --upgrade pip setuptools wheel

echo "Installing cffi..."
/home/vagrant/gitfs/bin/pip install -q 'cffi>=1.15.1'

echo "Installing Python dependencies..."
/home/vagrant/gitfs/bin/pip install -q -r /vagrant/requirements.txt
/home/vagrant/gitfs/bin/pip install -q -r /vagrant/test_requirements.txt

echo "Configuring Git..."
git config --global user.email "vagrant@localhost"
git config --global user.name "Vagrant"
git config --global init.defaultBranch main

echo "Installing GitFS in development mode..."
/home/vagrant/gitfs/bin/pip install -q -e /vagrant

echo "Installing ruff for code formatting..."
/home/vagrant/gitfs/bin/pip install -q ruff

echo "Provisioning completed successfully!"
echo "GitFS development environment is ready."
echo ""
echo "To get started:"
echo "  vagrant ssh"
echo "  cd /vagrant"
echo "  source ~/gitfs/bin/activate"
echo "  make test"
